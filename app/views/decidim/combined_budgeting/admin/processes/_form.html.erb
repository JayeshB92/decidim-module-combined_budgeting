<%= javascript_include_tag "decidim/slug_form" %>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".title") %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column">
      <%= form.text_field :slug %>
      <p class="help-text">
        <%== t(".slug_help", url: decidim_form_slug_url(:budgeting, form.object.slug || t(".slug_help_sample"))) %>
      </p>
    </div>

    <div class="row column">
      <%= form.translated :editor, :description, toolbar: :full, lines: 25 %>
    </div>
  </div>

  <div class="card-section">
    <div class="row column">
      <% if authorizations_for_select %>
        <%= form.select :authorizations, authorizations_for_select, { include_hidden: false }, { multiple: true, class: "chosen-select" } %>
      <% end %>
    </div>
  </div>

  <div class="card-section">
    <div class="row column">
      <% if components_for_select %>
        <%= form.select :component_ids, components_for_select, { include_hidden: false }, { multiple: true, class: "chosen-select" } %>
      <% end %>
    </div>
  </div>
</div>
