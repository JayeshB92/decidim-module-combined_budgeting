<article class="card card--full card--process">
  <div class="card__content">
    <div class="row collapse card--process__row">
      <div class="column card--process__column">
        <div class="text-center">
          <%= link_to process_path(process), class: "card__link" do %>
            <h2 class="card__title"><%= translated_attribute process.title %></h2>
          <% end %>
          <%= decidim_sanitize translated_attribute(process.description) %>
        </div>
      </div>
    </div>
    <div class="row column">
      <div class="column large-6 large-push-3">
        <div class="text-center">
          <%= link_to t(".vote"), process_path(process), class: "button expanded" %>
        </div>
      </div>
    </div>
  </div>
</article>
